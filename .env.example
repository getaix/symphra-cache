# Symphra Cache 环境变量配置示例
# 使用方法: CacheManager.from_env()

# ========== 后端配置 ==========

# 后端类型: memory, file, redis
SYMPHRA_CACHE_BACKEND=memory

# ========== 后端参数 (使用双下划线 OPTIONS__) ==========

# 内存后端配置
SYMPHRA_CACHE_OPTIONS__MAX_SIZE=10000
SYMPHRA_CACHE_OPTIONS__CLEANUP_INTERVAL=60

# 文件后端配置
# SYMPHRA_CACHE_OPTIONS__DB_PATH=./cache.db
# SYMPHRA_CACHE_OPTIONS__SERIALIZATION_MODE=pickle
# SYMPHRA_CACHE_OPTIONS__ENABLE_HOT_RELOAD=false

# Redis 后端配置
# SYMPHRA_CACHE_OPTIONS__HOST=localhost
# SYMPHRA_CACHE_OPTIONS__PORT=6379
# SYMPHRA_CACHE_OPTIONS__DB=0
# SYMPHRA_CACHE_OPTIONS__PASSWORD=
# SYMPHRA_CACHE_OPTIONS__KEY_PREFIX=symphra:
# SYMPHRA_CACHE_OPTIONS__SOCKET_CONNECT_TIMEOUT=5
# SYMPHRA_CACHE_OPTIONS__SOCKET_TIMEOUT=5
# SYMPHRA_CACHE_OPTIONS__MAX_CONNECTIONS=50
